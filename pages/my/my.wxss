/* 页面配置 */
page {
	min-height: 100%;
  background-color:#f5f5f5;
}
.container{
  min-height: 100%;
  font-size: 24rpx;
}
/* 个人信息容器 */
.userbox {
  display: flex;
	flex-direction: column;
  align-items: center;
  justify-content: center;  
  overflow: hidden;
  width: 100%;
  height: 450rpx;
}
.userinfo{
  z-index: 3;
}
/* 头像 */
.userbox .avatar {
  display: block;
  margin: 10rpx 0;
	width: 140rpx;
	height: 140rpx;
  border: 5rpx solid #eee;
  border-radius: 50%;
}
/* 用户名 */
.userinfo-text{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.userbox .username {
  margin-top: 2rpx; 
  font-size: 34rpx;
  font-weight: 600;
  color: rgba(75, 75, 75, 0.925);
}
/* 未登录时提示view */
.user-feature{
  width: 100%;
  margin-top: 15rpx;
}

.app-info {
  width: 100%;
  margin-top: 20rpx;
}

.btn-getInfo {
  width: 100%;
  border-radius: 0;
  background: #fff;
  font-size: 30rpx;
  color: #555;
}
/* 模块 */
.my_box{
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgb(255, 255, 255);
  border-radius: 10rpx;
  box-sizing: border-box; 
  box-shadow: 2px 2px 8px #ccc;
  z-index: 2;
}
#my_box1{
  top: 220rpx;
  height: 300rpx;
  width:90%;
  /* padding-top: 50%;
  border-top:2px #555 solid;  */
}
.my_box1_container{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  width: 90%;
  margin-top: 15%;
  border-top:1px rgba(201, 201, 201, 0.788) solid;
}
.my_box1__item{
  cursor: pointer;
  padding-top: 8%;
  width: 25%;
  text-align: center;
}

