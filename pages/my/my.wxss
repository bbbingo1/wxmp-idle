/* 页面配置 */

page {
  min-height: 100%;
  background-color: #f5f5f5;
}

.container {
  min-height: 100%;
  font-size: 24rpx;
}

/* 个人信息容器 */

.userbox {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  width: 100%;
  height: 450rpx;
  margin-bottom: 80rpx;
}

.userinfo {
  z-index: 3;
}

/* 头像 */

.userbox .avatar {
  display: block;
  margin: 10rpx 0;
  width: 140rpx;
  height: 140rpx;
  border: 5rpx solid #eee;
  border-radius: 50%;
}

/* 用户名 */

.userinfo-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.userbox .username {
  margin-top: 2rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: rgba(75, 75, 75, 0.925);
}

/* 未登录时提示view */

.user-feature {
  width: 100%;
  margin-top: 15rpx;
  z-index: 3;
}

.app-info {
  width: 100%;
  margin-top: 20rpx;
}

.btn-getInfo {
  width: 100%;
  border-radius: 0;
  background: #fff;
  font-size: 30rpx;
  color: #555;
}

/* 模块 */

.my_box {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  background-color: rgb(255, 255, 255);
  border-radius: 18rpx;
  box-sizing: border-box;
  box-shadow: 2px 2px 8px #ccc;
  z-index: 2;
}

