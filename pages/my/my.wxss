.my_box_container {
  border-top: 1px rgba(201, 201, 201, 0.788) solid;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  width: 90%;
}

#my_box1_container {
  margin-top: 15%;
}

#my_box2_container,#my_box3_container,#my_box4_container{
  margin-bottom: 2%;
}
.my_box_title{
  margin-top: 2%;
  margin-bottom: 3%;
  font-size: 28rpx;
  color: rgb(29, 29, 29);
}
.my_box__item {
  cursor: pointer;
  padding-top: 6%;
  width: 25%;
  text-align: center;
}

.my_box__item .a {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top:-1%;
}

#my_box2_container .my_box__item .icon,#my_box4_container .my_box__item .icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 18rpx;
}
