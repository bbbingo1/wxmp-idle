.submit-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
}

.block1, .block2 {
  background: #fff;
  width: 100%;
  margin-bottom: 30rpx;
}

.block1 {
  border-top: 1rpx solid #ccc;
}

.block3 {
  margin-top: 10rpx;
  background: #fff;
  width: 100%;
  margin-bottom: 150rpx;
}

/* 提交按钮 */
.submit-wish{
  box-sizing: border-box;
  width: 45%;
  padding: 20rpx;
  margin: 10rpx;
  margin-right: 0;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}
.beforewant{
  background: rgb(74, 235, 154)
}
.wanted{
  background: rgb(255, 158, 102);
}
.submit-contact {
  box-sizing: border-box;
  width: 45%;
  padding: 20rpx;
  margin: 10rpx;
  margin-left: 0;
  text-align: center;
  background: #f66;
  color: #fff;
  font-size: 34rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  }

